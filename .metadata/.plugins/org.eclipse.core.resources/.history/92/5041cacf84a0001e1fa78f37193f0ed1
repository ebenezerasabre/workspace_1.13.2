#ifndef EXTI_H_
#define EXTI_H_

#define EXTI_EXTICRx_OFFSET		(0x6C)
#define EXTI_EXTICR4			(*(volatile unsigned int *)(EXTI_BASE + EXTI_EXTICRx_OFFSET))

#define EXTI_IMRI_OFSSET		(0x080)
#define EXTI_IMR1				(*(volatile unsigned int *)(EXTI_BASE + EXTI_IMRI_OFFSET))

#define IMR13					(1U<<13)





#endif /* EXTI_H_ */
