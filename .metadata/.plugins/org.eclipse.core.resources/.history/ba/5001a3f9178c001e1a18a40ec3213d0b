
#include <stdint.h>
#include "gpio.h"
#include "adc.h"
#include "uart.h"
#include "base.h"

/**Function Prototypes**/

int prgrm_state = OFF;
int adc_buff[128];


int main(void)
{
    /**Initialize Peripherals**/
    gpio_init();
    adc_`init();
    adc_conversion();
    usart_init();

    /* Loop forever */
	for(;;){

        prgrm_state_set(&prgrm_state);
        prgrm_state_dsply(&prgrm_state);
        adc_smp_sgnl(adc_buff, &prgrm_state);
        
    }
}
